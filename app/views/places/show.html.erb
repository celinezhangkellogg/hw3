<!-- Place details page -->

<h1><%= @place["name"] %></h1>

<h2>Activities</h2>

<ul>
<% entries = Entry.where({"place_id" => @place["id"]})%>
<% for entry in entries %>
<h3><%= entry["title"]%></h3>
<li><%= entry["description"]%></li>
<li><%= entry["posted_on"]%></li>
<% end %>
</ul>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>


<p><a href="/places">Back to All Places</a></p>


